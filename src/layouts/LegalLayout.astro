---
import '@/styles/globals.css';
import SEOHead from '@/components/SEOHead.astro';
import Logo from '@/components/Logo.astro';
import { cn } from '@/lib/utils';
import Footer from '@/components/Footer.astro';

const { title, description, url } = Astro.props;
const currentPathname = Astro.url.pathname.replace(/\/$/, '');
---

<!doctype html>
<html lang="en">
  <head>
    <SEOHead title={title} description={description} url={url} />
  </head>
  <body class="bg-muted/50">
    <header>
      <nav class="bg-background shadow sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center h-16">
            {/* Logo */}
            <a href="/" class="h-2/3" aria-label="Phoenix Moving">
              <Logo class="h-full" />
            </a>

            {/* Navigation */}
            <div class="flex items-center gap-3">
              <a
                href="/company-policy"
                class={cn(
                  'text-muted-foreground text-sm',
                  currentPathname === '/company-policy' && 'text-foreground'
                )}>Policy</a
              >
              <a
                href="/privacy"
                class={cn(
                  'text-muted-foreground text-sm',
                  currentPathname === '/privacy' && 'text-foreground'
                )}>Privacy</a
              >
              <a
                href="/terms"
                class={cn(
                  'text-muted-foreground text-sm',
                  currentPathname === '/terms' && 'text-foreground'
                )}>Terms</a
              >
            </div>
          </div>
        </div>
      </nav>
    </header>
    <main
      class="prose prose-a:text-blue-600 mx-auto max-w-5xl border-x border-dashed px-4 py-10"
    >
      <div class="mb-8">
        <a
          href="/"
          aria-label="Brave Movers Home"
          class="text-muted-foreground hover:text-foreground flex items-center text-sm transition-colors"
        >
          &larr; Back to Home
        </a>
      </div>
      <slot />
    </main>
    <Footer className="border-t" />
  </body>
</html>
